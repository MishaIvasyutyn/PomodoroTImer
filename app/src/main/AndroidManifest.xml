<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pomadoroap" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <service
            android:name="com.example.pomadoroap.Backgroundd"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name="com.example.pomadoroap.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.pomadoroap.Main2HeadActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.pomadoroap.Settings"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Settings" />
        <activity
            android:name="com.example.pomadoroap.Rellax"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Relax" />
        <activity
            android:name="com.example.pomadoroap.Breaking"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Breakin" />
        <activity
            android:name="com.example.pomadoroap.Timer"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.pomadoroap.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>